<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.SettingFragment">
    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/settingname"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="名前"
            android:textSize="30sp"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="137dp"
            android:layout_toRightOf="@+id/settingname"
            android:text="XXXXXX"
            android:textSize="28sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/settingfriendid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="友達ID"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/settingfriendid"
            android:text="123456789"
            android:textAlignment="center"
            android:textSize="28sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="200dp">

        <TextView
            android:id="@+id/settingconnectid"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="連携ID"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/settingconnectid"
            android:text="123456789"
            android:textAlignment="center"
            android:textSize="28sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="300dp">

        <TextView
            android:id="@+id/settingquiz"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="クイズの時間"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/settingquiz"
            android:text="9時"
            android:textAlignment="center"
            android:textSize="28sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="400dp">

        <TextView
            android:id="@+id/settingpub"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:text="友達の公開範囲"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/settingpub"
            android:text="全て"
            android:textAlignment="center"
            android:textSize="28sp" />
    </RelativeLayout>
</FrameLayout>